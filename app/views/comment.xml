<Alloy>
	<Window onOpen="winOpen">
		<ActionBar id="actionBar" title="Reimburse View" onHomeIconItemSelected="doMenuClick" />
		<View class="container" layout = "vertical">
			<ScrollView class="centeredVertical" layout="vertical" width="100%" zIndex="1">
				<View class="centeredHorizontal" >
					<View class="verticalLayout" width="80%">
						<Label  class="labelView">Title</Label>
						<Label id="titleField" ></Label>
					</View>
					<ImageView id= "image" class="fitWidth" image="/icon/ic_action_photo.png" width="20%" onClick="imageClick"/>
				</View>
				<View class="vSplitter" />
				<Label class="labelView" >Amount</Label>
				<Label id="amountField" ></Label>
				<View class="vSplitter" />
				<Label  class="labelView" >Date</Label>
				<Label id="dateField"></Label>
				<View class="vSplitter" />
				<Label  class="labelView" >Description</Label>
				<Label id="descriptionField" ></Label>
				<View class="vSplitter" />
				<Label>Comment :</Label>
				<TextArea id="commentField"></TextArea>
				<Button id="addNewButton" title="Add Comment" onClick="newDetailClick" width="Ti.UI.FILL"></Button>
				<View id="tableView" searchAsChild="false" dataCollection="comment" dataFilter="whereFunction" dataTransform="transformFunction" layout="vertical">
					<Require src="commentRow"/>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>