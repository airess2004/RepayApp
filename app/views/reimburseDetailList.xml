<Alloy>
	<Window onOpen="windowOpen" onClose="windowClose">
		<ActionBar id="actionBar" onHomeIconItemSelected="doMenuClick" />
		<Menu>
			<MenuItem id="editMenu" title="Edit" onClick="doEdit" showAsAction = "Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu>
		<View class="container" layout = "vertical">
			<ScrollView class="centeredVertical" layout="vertical" width="100%" zIndex="1">
				<Label class="labelView"   width="40%">Total :</Label>
				<TextField id="totalField" hintText="0" width="60%" editable="false"></TextField>
				<View class="vSplitter" />
				<Button id="addNewButton" title="Add New" onClick="newDetailClick" width="Ti.UI.FILL"></Button>
				<View class="vSplitter" />
			</ScrollView>
			<TableView id="tableView" searchAsChild="false" dataCollection="reimburseDetail" dataFilter="whereFunction" dataTransform="transformFunction">
				<Require src="reimburseDetailRow"/>
			</TableView>
		</View>
	</Window>
</Alloy>