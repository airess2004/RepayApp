<Alloy>
	<Window onOpen="winOpen">
		<ActionBar id="actionBar" title="New Reimburse" onHomeIconItemSelected="doMenuClick" />
		<Menu>
			<MenuItem id="saveMenu" title="SAVE" onClick="doSave" showAsAction = "Ti.Android.SHOW_AS_ACTION_ALWAYS" />
		</Menu> 
		<View class="container" layout = "vertical">
			<ScrollView class="centeredVertical" layout="vertical" width="100%" zIndex="1">
				<View class="centeredHorizontal" >
					<View class="verticalLayout" width="80%">
						<Label  class="labelView">Title</Label>
						<TextField id="titleField" hintText="Title" ></TextField>
					</View>
					<ImageView id= "image" class="fitWidth" image="/icon/ic_action_photo.png" width="20%" onClick="imageClick"/>
				</View>
				<Label class="labelView" >Amount</Label>
				<TextField id="amountField" hintText="Amount" keyboardType="Titanium.UI.KEYBOARD_NUMBER_PAD" ></TextField>
				<Label  class="labelView" >Date</Label>
				<TextField id="dateField" hintText="YYYY-MM-DD"  onFocus="dateFieldClick" editable="false"></TextField>
				<Label  class="labelView" >Description</Label>
				<TextField id="descriptionField" hintText="Description" ></TextField>
				 
				<Label>Comment :</Label>
				<View class="centeredHorizontal">
					<TableView id="commentTable">
						<TableViewRow>
							<ImageView id="userAvatar"/>
							<Label id="message"/>
							<Label id="date"/>
						</TableViewRow>
					</TableView>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>