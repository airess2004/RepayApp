<Alloy>
	<!--Collection id="localReimburseDetail" src="reimburseDetail" instance="true"/-->
	<!--Collection id="localComment" src="comment" instance="true"/-->
	<View id="homeReimburseDetailRow" class="homeDetailRow" layout="vertical" >
		<View class="vSplitter" />
		<View id="innerView" layout="horizontal" onClick="rowClick" onLongclick="rowLongClick">
			<ImageView class="avatar" image="{urlImageOriginal}" onClick="thumbPopUp"/>
			<Label id="title" text="{name}" />
			<View class="rightView">
				<Label id="status" text="{receiptDate}"/>
				<Label id="total" text="{amount}"/>
			</View>
		</View>
		<View height="Ti.UI.SIZE" width="Ti.UI.FILL">
			<ImageView class="commentImg"></ImageView>
			<Label id="commentLabel"></Label>
			<Switch id="switchBtn" value="true"></Switch>
		</View>
	</View>
</Alloy>