<Alloy>
  <TableViewRow id="reimburseRow" title="{title}" className="reimburseRow1">
  	<View id="innerView" layout="horizontal" onClick="rowClick" onLongclick="rowLongClick">
  		<View id="avatarView" onClick="thumbPopUp">
    		<ImageView id="avatar" />
    	</View>
    	<View class="midView" layout="vertical">
    		<Label id="title" text="{title}" />
    		<Label id="date" text="{projectDate}" />
    		<Label id="total" text="{total}"/>
    	</View>
    	<View class="rightView">
    		<Label id="status" text="{status}"/>
    	</View>
    </View>
  </TableViewRow>
