<Alloy>
  <TableViewRow id="reimburseRow" title="{title}">
  	<View id="innerView" layout="horizontal" onClick="rowClick" onLongclick="rowLongClick">
    	<ImageView class="avatar" onClick="thumbPopUp"/>
    	<Label id="title" text="{title}" />
    	<View class="rightView">
    		<Label id="status" text="{status}"/>
    		<Label id="total" text="{total}"/>
    	</View>
    </View>
  </TableViewRow>
  <AlertDialog id="deleteDialog" onClick="doDeleteClick" title="Confirm"
            message="Are you sure you want to delete this record?" cancel="1">
            <!-- The ButtonNames tag sets the buttonNames property. -->
            <ButtonNames>
                <ButtonName>Yes</ButtonName>
                <ButtonName>No</ButtonName>
            </ButtonNames>
    </AlertDialog>
</Alloy>